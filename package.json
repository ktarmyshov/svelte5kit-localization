{
  "name": "svelte5kit-localization",
  "description": "Localization for SvelteKit with Svelte 5 reactivity",
  "version": "0.1.17",
  "license": "MIT",
  "author": {
    "name": "Konstantin Tarmyshov",
    "email": "k.tarmyshov@googlemail.com"
  },
  "homepage": "https://github.com/kt-public/svelte5kit-localization",
  "keywords": [
    "svelte",
    "svelte5",
    "svelte 5",
    "sveltekit",
    "localization",
    "internationalization",
    "i18n",
    "l10n"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt-public/svelte5kit-localization.git"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "prepack": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test": "cypress run --browser chrome",
    "changeset:version": "changeset version && git add --all",
    "changeset:publish": "changeset publish",
    "cy:open": "cypress open"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "!cypress"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.23.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.22.0",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.19.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@types/node": "^22.14.0",
    "cypress": "^14.2.0",
    "dompurify": "^3.2.4",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-cypress": "^4.2.0",
    "eslint-plugin-svelte": "^3.0.2",
    "globals": "^16.0.0",
    "prettier": "^3.5.2",
    "prettier-plugin-svelte": "^3.3.3",
    "publint": "^0.3.5",
    "svelte": "^5.23.0",
    "svelte-check": "^4.1.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.19.0",
    "vite": "^6.2.2"
  },
  "dependencies": {
    "intl-messageformat": "^10.7.15",
    "npm": "^10.9.2"
  }
}
